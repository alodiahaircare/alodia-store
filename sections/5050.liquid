    color: 
  }
</style>

<div id="hp-50-50" class="hp-5050">
  <div class="hp50-inner">
    <div class="hp50__content">

        <div class="hp50__column hp50__column--text">
          <div class="hp50__title-wrap">
            <p class="hp50__title">
              {{ section.settings.title }}
            </p>
          </div>
          <div class="hp50__text-wrap">
            <p class="hp50__text">
              {{ section.settings.text }}
            </p>
          </div>
          <div class="hp50__button-wrap">
            {% for block in section.blocks %}
              <div class="hp50__button {% if forloop.last %} hp50__button-second {% endif %}">
                <a href="{{ block.settings.button-url }}" {% if block.settings.new-tab %}target="_blank"{% endif %} class="hp50__button-link {% if forloop.last %} hp50__button--alt-styling {% endif %}">
                  {{ block.settings.button-text }}
                </a>
              </div>
            {% endfor %}
           
          </div>
        </div>

        <div class="hp50__column hp50__column--image">
          <div class="hp50__image-wrap">
            <img src="{{ section.settings.image | img_url: 'master' }}" class="hp50__image">
          </div>
        </div>

    </div>
  </div>
</div>

{% schema %}
  {
    "name": "50/50",
    "settings": [
      {
        "type": "header",
        "content": "Section Image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "header",
        "content": "Section Text"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Personalize Your Scalp and Hair Care Routine"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "with doctor formulated clean products"
      },
      {
        "type": "header",
        "content": "Section Buttons"
      }
    ],
    "blocks": [
      {
        "type": "Button",
        "name": "Button",
        "limit": 2,
        "settings": [
          {
            "type": "text",
            "id": "button-text",
            "label": "Button Text",
            "default": "Customize Your Kit"
          },
          {
            "type": "url",
            "id": "button-url",
            "label": "Button Link"
          },
          {
            "type": "color",
            "id": "button-color-bg",
            "label": "Button Background Color",
            "default": "#000"
          },
          {
            "type": "color",
            "id": "button-color-text",
            "label": "Button Text Color",
            "default": "#fff"
          },
          {
            "type": "color",
            "id": "button-hover-color-bg",
            "label": "Button Hover Background Color",
            "default": "#fff"
          },
          {
            "type": "color",
            "id": "button-hover-color-text",
            "label": "Button Hover Text Color",
            "default": "#000"
          },
          {
            "type": "checkbox",
            "id": "new-tab",
            "default": false,
            "label": "Enable opening link in new tab"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Home Page",
        "name": "50/50"
        
      }
    ]
  }
{% endschema %}