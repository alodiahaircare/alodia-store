<div class="padding-50">
  <div class="container main content ingredients-section">
    <div class="eight columns">
      <figure class="bio-container">
        {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.image.alt }}">
        {% endif %}
      </figure>
    </div>

    <div class="eight columns offset-by-one">
      {% if section.settings.title != blank %}    
      <div class="fourteen columns offset-by-two">
        <h4 class="title center">{{ section.settings.title }}</h4>
      </div>
      {% endif %}

    {% for block in section.blocks %}
      <div class="ingredient">
        {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: 'master'}}" alt="{{ block.settings.name  }}">
        {% endif %}
        {%- if block.settings.name != blank or block.settings.content != blank -%}
        <div class="ingredient-description">
          {%- if block.settings.name != blank -%}
          <h3>{{ block.settings.name }}</h3>
          {%- endif -%}
          {%- if block.settings.content != blank -%}
            {{ block.settings.content }}
          {%- endif -%}
        </div>
        {%- endif -%}
      </div>
    {% endfor %}

    </div>
  </div>
</div>

  
  
  {% schema %}
    {
      "name": "Ingredients",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Alodia is so very passionate about empowering and educating women all around the globe to Learn, Love and Grow their hair"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ],
      "blocks": [
        {
          "type": "ingredients",
          "name": "Ingredients",
          "settings": [
            {
              "type": "text",
              "id": "name",
              "label": "Name"
            },
            {
              "type": "text",
              "id": "content",
              "label": "Content"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }
          ]
        }
      ]
    }
  {% endschema %}
  