<div class="container main content padding-50">
    {% if section.settings.title != blank %}
    <h4 class="title center">{{  section.settings.title }}</h4>
    {% endif %}
    {% if section.blocks.size > 0 %}
    <div class="sixteen columns">
      <div class="image-grid">
        {% for block in section.blocks %}  
          {% if block.settings.image != blank or block.settings.description != blank %}
            
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="image-box" style="background: {{ block.settings.color }}">
            {% else %}
              <div class="image-box" style="background: {{ block.settings.color }}">
            {% endif %}

                <div class="image-text-content-box">
                {% if block.settings.image != blank %}          
                  <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.description}}">
                {% endif %}
                {% if block.settings.description != blank %}
                  <div class="text-box">
                      <p>{{ block.settings.description }}</p>
                  </div>
                {% endif %}
                </div>

            {% if block.settings.link != blank %}
              </a>
            {% else %}
              </div>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
    {% endif %}
  </div>
  
  
  
  {% schema %}
    {
      "name": "Never contains",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Our products work for all hair types"
        },
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#faf9f7"
        }
      ],
      "blocks": [
        {
          "type": "image",
          "name": "Image",
          "settings": [
            {
                "type": "color",
                "id": "color",
                "label": "Color",
                "default": "#e6d0b3"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
              "type": "text",
              "id": "description",
              "label": "Description"
            },
            {
                "type": "url",
                "id": "link",
                "label": "Link"
            }
          ]
        }
      ],
      "presets": [
      {
        "category": "Image blocks",
        "name": "Image blocks"
      }
    ]
    }
  {% endschema %}
  