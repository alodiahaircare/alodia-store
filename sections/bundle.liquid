<div class="container main content padding-50">
    {% if section.settings.title != blank %}
    <h4 class="title center">{{  section.settings.title }}</h4>
    {% endif %}
    {% if section.blocks.size > 0 %}
    <div class="sixteen columns">
      <div class="image-grid">
        {% for block in section.blocks %}  
          {% if block.settings.image != blank or block.settings.description != blank %}
            
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="image-box" style="background: {{ block.settings.color }}">
            {% else %}
              <div class="image-box" style="background: {{ block.settings.color }}">
            {% endif %}

                <div class="image-text-content-box">
                {% if block.settings.image != blank %}          
                  <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.description}}">
                {% endif %}
                {% if block.settings.description != blank %}
                  <div class="text-box">
                     {{ block.settings.description | upcase }}
                  </div>
                {% endif %}
                </div>

            {% if block.settings.link != blank %}
              </a>
            {% else %}
              </div>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
    {% endif %}
  </div>
  
  
  
  {% schema %}
    {
      "name": "Never contains",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Clinically proven"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "After 4 weeks of use:"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Content"
        },
        {
            "type": "header",
            "content": "Bundle"
        },
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#faf9f7"
        },
        {
            "type": "product",
            "id": "bundle",
            "label": "Bundle product"
        },
        {
            "type": "product_list",
            "id": "product_list",
            "label": "Products",
            "limit": 5
        }
      ],
      "presets": [
      {
        "category": "Bundle",
        "name": "Bundle"
      }
    ]
    }
  {% endschema %}
  