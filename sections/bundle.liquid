{% if section.settings.product_list != blank and section.settings.bundle != blank %}

<div class="container main content padding-50">
  {% if section.settings.title != blank %}
  <h4 class="title center">{{  section.settings.title }}</h4>
  {% endif %}

  <div class="column">
  {% if section.settings.subtitle != blank %}
  <h4 class="left bundle-subtitle">{{  section.settings.subtitle }}</h4>
  {% endif %}

  {% if section.settings.content != blank %}
  <div  class="left">{{ section.settings.content }}</div>
  {% endif %}
</div>

  <div class="sixteen columns">
    <div class="bundle-section" style="background: {{ section.settings.background }}">
      <div class="bundle-buy">
        {% if section.settings.title_bundle != blank %}
           <p>{{ section.settings.title_bundle }}</p>
        {% endif %}
        {% form  'product', section.settings.bundle %}
        <button type="submit" name="add" class="addtocart action_button add_to_cart sit__slide-button" data-label={{ add_to_cart_label | json }}>
          <span class="text">{{ add_to_cart_label }}</span>
          <svg x="0px" y="0px" width="32px" height="32px" viewBox="0 0 32 32" class="checkmark">
            <path fill="none" stroke-width="2" stroke-linecap="square" stroke-miterlimit="10" d="M9,17l3.9,3.9c0.1,0.1,0.2,0.1,0.3,0L23,11"/>
          </svg>
        </button>
        {% endform %}

      </div>
      <div class="product-bundle-section padding-50">
      {% for product in section.settings.product_list %}
        <div class="product-bundle">
          <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.featured_image.alt }}">
          <div class="product-bundle-title">
            {{ product.title }}
          </div>
        </div>
      {% endfor %}
      </div>
    </div>

  </div>
</div>
  
{% endif %}

  
{% schema %}
  {
    "name": "Bundle",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Clinically proven"
      },
      {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "After 4 weeks of use:"
      },
      {
          "type": "richtext",
          "id": "content",
          "label": "Content"
      },
      {
          "type": "header",
          "content": "Bundle"
      },
      {
          "type": "color",
          "id": "background",
          "label": "Background",
          "default": "#faf9f7"
      },
      {
          "type": "text",
          "id": "title_bundle",
          "label": "Title",
          "default": "Shop Bundle"
      },
      {
          "type": "product",
          "id": "bundle",
          "label": "Bundle product"
      },
      {
          "type": "product_list",
          "id": "product_list",
          "label": "Products",
          "limit": 5
      }
    ],
    "presets": [
    {
      "category": "Bundle",
      "name": "Bundle"
    }
  ]
  }
{% endschema %}
  